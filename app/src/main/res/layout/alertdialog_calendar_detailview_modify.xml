<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:id="@+id/ll_alertdialog_twobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_calendardetailview_backdialog"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_alertdailog_calendar_detailview_modify1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendardregular"
            android:padding="0dp"
            android:layout_marginTop="15dp"
            android:text="기록 입력을 취소하시겠어요?"
            android:textColor="#5E412F"
            android:textFontWeight="600"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_alertdailog_calendar_detailview_modify2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendardregular"
            android:padding="5dp"
            android:text="기록한 내용이 전부 사라집니다."
            android:textColor="#ACACAC"
            android:textFontWeight="600"
            android:textSize="12sp"  />


        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="4dp"
            android:background="#DDDDDD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_myinfo_l1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5">

            <Button
                android:id="@+id/btn_alertdailog_calendar_detailview_modify_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:fontFamily="@font/pretendardbold"
                android:text="취소"
                android:textColor="#715747"
                android:textSize="15dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view5"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:background="#DDDDDD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_myinfo_l1" />

            <Button
                android:id="@+id/btn_alertdailog_calendar_detailview_modify_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:fontFamily="@font/pretendardbold"
                android:text="네"
                android:textColor="#F07818"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</layout>