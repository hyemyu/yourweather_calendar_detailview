<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.calendardetailview.ScrollviewFragment2">

    <TextView
        android:id="@+id/tv_scrollview_fragment2_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardregular"
        android:text="7월 4일의 일기"
        android:textAlignment="center"
        android:textColor="#2B2B2B"
        android:textFontWeight="600"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="382dp"
        android:layout_height="364dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="72dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_scrollview_fragment2_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardregular"
                android:text=""
                android:textColor="#2B2B2B"
                android:textFontWeight="500" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_scrollview_fragment2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>


    </ScrollView>

    <ImageButton
        android:id="@+id/btn_calendardetailview2_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="17dp"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView4"
        app:srcCompat="@drawable/btn_calendardetailview_plus" />


</androidx.constraintlayout.widget.ConstraintLayout>


